.person-page .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.user-info .avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 15px;
}

.user-info .avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-info .username {
  font-size: 20px;
  font-weight: bold;
}

.upload-avatar-btn {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.upload-avatar-btn:hover {
  background-color: #005bb5;
}

