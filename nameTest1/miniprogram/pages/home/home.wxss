.home-page .query-input {
  width: 100%;
  padding: 15px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  margin-bottom: 20px;
}

.query-btn {
  width: 100%;
  padding: 10px;
  background-color: #ff9900;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  margin-bottom: 20px;
}

.query-btn:hover {
  background-color: #e68a00;
}

.origin-result {
  background-color: white;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.origin-result h3 {
  font-size: 20px;
  margin-bottom: 10px;
}

.origin-result p {
  font-size: 14px;
  line-height: 20px;
}
